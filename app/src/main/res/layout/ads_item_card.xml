<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="#59CD3A"
    app:cardCornerRadius="12dp"
    app:cardElevation="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_productMyAds"
            android:layout_width="137dp"
            android:layout_height="141dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_productDesc"
            android:layout_width="242dp"
            android:layout_height="101dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:editable="false"
            android:ems="10"
            android:inputType="none"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/img_productMyAds"
            app:layout_constraintTop_toBottomOf="@+id/tv_MyAds_Title" />

        <Button
            android:id="@+id/btn_delete_myAds"
            android:layout_width="92dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:fontFamily="@font/page_content_font"
            android:text="@string/btn_delete"
            android:textColor="@color/green_new"
            android:textSize="14sp"
            app:backgroundTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_productDesc" />

        <Button
            android:id="@+id/btn_edit_myAds"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="@font/page_content_font"
            android:text="@string/btn_edit"
            android:textColor="@color/green_new"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_myAds"
            app:layout_constraintTop_toBottomOf="@+id/et_productDesc" />

        <EditText
            android:id="@+id/et_itemPrice"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="9dp"
            android:ems="10"
            android:inputType="none"
            android:paddingLeft="5dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_edit_myAds"
            app:layout_constraintTop_toBottomOf="@+id/et_productDesc" />

        <TextView
            android:id="@+id/tv_MyAds_Title"
            android:layout_width="235dp"
            android:layout_height="25dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="27dp"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_productMyAds"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>