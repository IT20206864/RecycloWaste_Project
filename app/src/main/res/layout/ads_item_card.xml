<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor=" #e6e6e6"
    app:cardCornerRadius="12dp"
    app:cardElevation="15dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_productMyAds"
            android:layout_width="121dp"
            android:layout_height="112dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/et_productDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_productDesc"
            android:layout_width="274dp"
            android:layout_height="115dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="1dp"
            android:editable="false"
            android:ems="10"
            android:inputType="none"
            android:text="Name"
            app:layout_constraintStart_toEndOf="@+id/img_productMyAds"
            app:layout_constraintTop_toBottomOf="@+id/tv_MyAds_Title" />

        <Button
            android:id="@+id/btn_delete_myAds"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:text="@string/btn_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_productDesc" />

        <Button
            android:id="@+id/btn_edit_myAds"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:text="@string/btn_edit"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_myAds"
            app:layout_constraintTop_toBottomOf="@+id/et_productDesc" />

        <EditText
            android:id="@+id/et_itemPrice"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="9dp"
            android:ems="10"
            android:inputType="none"
            android:text="Name"
            app:layout_constraintEnd_toStartOf="@+id/btn_edit_myAds"
            app:layout_constraintTop_toBottomOf="@+id/et_productDesc" />

        <TextView
            android:id="@+id/tv_MyAds_Title"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/et_productDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>