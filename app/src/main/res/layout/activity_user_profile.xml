<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="154dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="129dp"
        app:srcCompat="@drawable/profile2" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_below="@id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/page_content_font"
        android:text="Fname Lname"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="250dp"
        android:fontFamily="@font/page_content_font"
        android:text="@string/user_profile_email"
        android:textColor="@color/black"
        android:textSize="@dimen/SubHeaderFontSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/telnoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:fontFamily="@font/page_content_font"
        android:text="@string/user_profile_telno"
        android:textColor="@color/black"
        android:textSize="@dimen/SubHeaderFontSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userTelno"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/page_content_font"
        android:onClick="openEditProfile"
        android:text="@string/user_profile_edit_prof"
        android:textColor="@color/green_new"
        android:textSize="@dimen/SubHeaderFontSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rv_chngpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_editprofile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/page_content_font"
        android:text="@string/user_profile_change_pwd"
        android:textColor="@color/green_new"
        android:textSize="@dimen/SubHeaderFontSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dltacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_chngpwd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/page_content_font"
        android:text="@string/user_profile_delete_acc"
        android:textColor="@color/green_new"
        android:textSize="@dimen/SubHeaderFontSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userTelno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telnoTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/page_content_font"
        android:text="+94000000000"
        android:textColor="@color/tv_grey"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/page_content_font"
        android:text="name@example.com"
        android:textColor="@color/tv_grey"
        android:textSize="20sp" />
</RelativeLayout>