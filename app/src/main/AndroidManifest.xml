<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclowaste">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecycloWaste">
        <activity android:name=".EditProfile"
            android:label="@string/edit_profile_title"
            android:parentActivityName=".UserProfile"></activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/user_profile_title"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Reviews_Booking"
            android:exported="true" />
        <activity
            android:name=".Reviews_Driver"
            android:exported="true" />
        <activity
            android:name=".MyBookings"
            android:label="@string/my_bookings_title"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".BookingDetails" />
        <activity
            android:name=".BookingPayment"
            android:label="Payment"
            android:parentActivityName=".BookPickup" />
        <activity
            android:name=".BookPickup"
            android:label="@string/book_pickup_title"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".select_driver" />
        <activity android:name=".PostAd" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="RecycloWaste">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>